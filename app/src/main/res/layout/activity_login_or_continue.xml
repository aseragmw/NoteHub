<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".presentation.screens.LoginOrContinueActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="351dp"
        android:layout_height="349dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBar_choiceScreen"
        app:srcCompat="@drawable/login_image" />

    <Button
        android:id="@+id/btn_login_choiceScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/white"
        android:text="Login"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/btn_signup_choiceScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/white"
        android:text="Register"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/btn_login_choiceScreen"
        app:layout_constraintStart_toStartOf="@+id/btn_login_choiceScreen"
        app:layout_constraintTop_toBottomOf="@+id/btn_login_choiceScreen" />

    <Button
        android:id="@+id/btn_continue_choiceScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/white"
        android:text="Continue Without Login"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/btn_signup_choiceScreen"
        app:layout_constraintStart_toStartOf="@+id/btn_signup_choiceScreen"
        app:layout_constraintTop_toBottomOf="@+id/btn_signup_choiceScreen" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/appBar_choiceScreen"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>